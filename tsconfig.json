{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],

    // Strict Mode - Essencial para Clean Architecture e Core Funcional
    "strict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    // Checks adicionais
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "forceConsistentCasingInFileNames": true,

    // Path mapping - Clean Architecture
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@core/domain/*": ["src/core/domain/*"],
      "@core/schemas/*": ["src/core/schemas/*"],
      "@core/utils/*": ["src/core/utils/*"],
      "@application/*": ["src/application/*"],
      "@application/use-cases/*": ["src/application/use-cases/*"],
      "@application/ports/*": ["src/application/ports/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@infrastructure/controllers/*": ["src/infrastructure/controllers/*"],
      "@infrastructure/database/*": ["src/infrastructure/database/*"],
      "@infrastructure/repositories/*": ["src/infrastructure/repositories/*"],
      "@infrastructure/modules/*": ["src/infrastructure/modules/*"]
    }
  }
}
